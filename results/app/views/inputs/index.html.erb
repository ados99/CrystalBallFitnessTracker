<p id="notice"><%= notice %></p>

<h1>Inputs</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Gender</th>
      <th>Height (feet)</th>
      <th>Height (in)</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inputs.each do |input| %>
      <tr>
        <td><%= input.age %></td>
        <td><%= input.gender %></td>
        <td><%= input.height_feet %></td>
        <td><%= input.height_inches %></td>
        <td><%= input.weight %></td>
        <td><%= link_to 'Show', input %></td>
        <td><%= link_to 'Destroy', input, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



