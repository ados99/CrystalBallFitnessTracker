<%= form_with(model: input, local: true) do |form| %>
  <% if input.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(input.errors.count, "error") %> prohibited this input from being saved:</h2>

      <ul>
        <% input.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field" id = >
    <%= form.label :gender %>
    <%= form.select :gender, ['Male', 'Female'], :include_blank => true%>
  </div>

  <div class="field">
    Height (ft) </br>
    <%= form.text_field :height_feet %>
  </div>

  <div class="field">
    Height (in) </br>
    <%= form.text_field :height_inches %>
  </div>

  <div class="field">
    Weight (lb) </br>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :bed_time %>
    <%= form.time_field :bed_time %>
  </div>

  <div class="field">
    <%= form.label :wake_up_time %>
    <%= form.time_field :wake_up_time %>
  </div>

  <div class="field">
    Exercise Time for today (minutes) </br>
    <%= form.text_field :exercise_time%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>