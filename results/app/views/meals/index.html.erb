<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Breakfast</th>
      <th>Breakfast calorie</th>
      <th>Lunch</th>
      <th>Lunch calorie</th>
      <th>Dinner</th>
      <th>Dinner calorie</th>
      <th>Snack</th>
      <th>Snack calorie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.Date %></td>
        <td><%= meal.Breakfast %></td>
        <td><%= meal.Breakfast_Calorie %></td>
        <td><%= meal.Lunch %></td>
        <td><%= meal.Lunch_Calorie %></td>
        <td><%= meal.Dinner %></td>
        <td><%= meal.Dinner_Calorie %></td>
        <td><%= meal.Snack %></td>
        <td><%= meal.Snack_Calorie %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

